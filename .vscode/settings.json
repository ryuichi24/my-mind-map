{
  "files.associations": {
    "*.json": "jsonc"
  },
  // PlantUML
  "plantuml.render": "PlantUMLServer",
  "plantuml.server": "http://localhost:8080/uml",
  // formatter
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.showFoldingControls": "always"
}
